<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core.xsd">

    <cache-template name="myDefaultTemplate">
        <key-type>java.lang.String</key-type>
        <value-type>java.lang.Object</value-type>
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap unit="entries">10000</heap>
    </cache-template>

    <cache alias="shortTermCache" uses-template="myDefaultTemplate">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
    </cache>

    <cache alias="longTermCache" uses-template="myDefaultTemplate">
        <!--<key-type>java.lang.String</key-type>-->
        <!--<value-type>java.util.Map</value-type>-->
        <expiry>
            <ttl unit="seconds">43200</ttl>
        </expiry>
    </cache>

    <cache alias="collectoryCache" uses-template="myDefaultTemplate">
        <expiry>
            <ttl unit="seconds">86400</ttl>
        </expiry>
    </cache>

    <cache alias="outageCache" uses-template="myDefaultTemplate">
        <expiry>
            <ttl unit="seconds">604800</ttl>
        </expiry>
    </cache>

</config>